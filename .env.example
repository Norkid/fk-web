# Database connection string for PostgreSQL. Replace <password> and your-database-name as needed.
DATABASE_URI=postgres://postgres:<password>@127.0.0.1:5432/your-database-name

# Secret key for Payload CMS authentication and encryption.
PAYLOAD_SECRET=YOUR_SECRET_HERE

# The public URL where your server is accessible (used for links, previews, etc.).
NEXT_PUBLIC_SERVER_URL=http://localhost:3000

# Site name in Finnish (used for SEO and UI).
SITE_NAME=Fyysikkokilta
# Site name in English (used for SEO and UI).
SITE_NAME_EN=Guild of Physics

# Allow users who do not exist in the database to log in via OAuth (true/false).
ALLOW_NON_EXISTING_USERS=false

# Default name shown as the sender in outgoing emails.
EMAIL_FROM_NAME=Your Name
# Default email address used as the sender in outgoing emails.
EMAIL_FROM_ADDRESS=your-email@gmail.com
# SMTP server host for sending emails.
EMAIL_HOST=smtp.gmail.com
# SMTP server port for sending emails.
EMAIL_PORT=587
# SMTP username for authentication (usually your email address).
EMAIL_USER=your-email@gmail.com
# SMTP password for authentication.
EMAIL_PASSWORD=your-email-password

# API token for UploadThing file storage integration.
UPLOADTHING_TOKEN=your-uploadthing-token

# Enable or disable bundle analysis (true/false).
ANALYZE=false

# Google OAuth client ID for authentication.
GOOGLE_CLIENT_ID=your-google-client-id
# Google OAuth client secret for authentication.
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Google API key for accessing Google APIs (if needed).
GOOGLE_API_KEY=your-google-api-key

# Default recipient email for form builder submissions.
FORM_BUILDER_DEFAULT_TO_EMAIL=your-email@gmail.com

# Google site verification code for Search Console ownership verification.
GOOGLE_SITE_VERIFICATION=your-google-site-verification-code
